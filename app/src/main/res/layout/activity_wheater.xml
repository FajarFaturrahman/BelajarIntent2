<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff00cc"
        android:paddingBottom="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/sun_img"
            android:layout_marginTop="10dp"/>
            <!--android:src="@drawable/art_clear"-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wheater Apps"
            android:textSize="33dp"
            android:layout_toRightOf="@+id/sun_img"
            android:layout_marginTop="20dp"

            android:textColor="#ffff"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff40D9"
        android:paddingBottom="36dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today, April 03"
            android:textSize="25dp"
            android:textColor="#ffff"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/date"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_toRightOf="@+id/date"
            android:layout_marginTop="47dp"
            android:id="@+id/img_logoCloudy"/>
            <!--android:src="@drawable/art_rain"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:text="26°"
            android:textSize="75dp"
            android:textColor="#fff"
            android:id="@+id/suhu"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/suhu"
            android:text="20°"
            android:textSize="50dp"
            android:textColor="#fff"
            android:id="@+id/suhu2"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloudy"
            android:textSize="40dp"
            android:textColor="#fff"
            android:layout_below="@+id/img_logoCloudy"
            android:layout_toRightOf="@+id/date"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="35dp"
            android:paddingBottom="20dp"
            />

    </RelativeLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:background="#fc5ddd"
        android:paddingBottom="25dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"/>
            <!--android:src="@drawable/art_clouds"-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="12:00"
            android:textSize="35dp"
            android:textColor="#fff"

            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"/>
            <!--android:src="@drawable/art_clouds"-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="13:00"
            android:textSize="35dp"
            android:textColor="#fff"

            />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pindah"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            android:id="@+id/pindah"
            />
    </LinearLayout>


</LinearLayout>